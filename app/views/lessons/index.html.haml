    %th
    %th

  - @lessons.each do |lesson|
    %tr
      %td= lesson.name
      %td= lesson.numbering
      %td= lesson.course
      %td= link_to 'Show', lesson
      %td= link_to 'Edit', edit_lesson_path(lesson)
